{
  "name": "nail-booking-system",
  "version": "1.0.0",
  "description": "美甲預約系統 - 包含管理後台和客戶預約頁面",
  "private": true,
  "scripts": {
    "start:admin": "cd frontend/admin-panel && npm start",
    "start:customer": "cd frontend/customer-booking && npm start",
    "start": "concurrently \"npm run start:admin\" \"npm run start:customer\"",
    "build:admin": "cd frontend/admin-panel && npm run build",
    "build:customer": "cd frontend/customer-booking && npm run build",
    "build": "npm run build:admin && npm run build:customer",
    "install:all": "npm install && cd frontend/admin-panel && npm install && cd ../customer-booking && npm install",
    "clean": "rm -rf frontend/admin-panel/node_modules frontend/customer-booking/node_modules node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend/admin-panel",
    "frontend/customer-booking"
  ]
}
